const val question = "life, the universe, and everything"
const val answer = 42

val tripleQuotedString = """
    #question = "$question"
    #answer = $answer""".trimMargin("#")

fun main() {
    println(tripleQuotedString)
}

//Program ini menggunakan tanda kutip tiga kali (""") untuk membuat string multiline dan menggabungkan nilai dari question dan answer ke dalam string tersebut.
